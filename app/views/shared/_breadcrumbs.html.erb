<nav class="bg-white border-b" aria-label="Breadcrumb">
  <div class="container mx-auto px-4 py-3">
    <ol class="flex items-center space-x-2 text-sm">
      <li>
        <%= link_to root_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
          </svg>
        <% end %>
      </li>

      <% if content_for?(:breadcrumb_action) && !@child %>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
          <span class="ml-2 text-gray-700 font-medium"><%= yield :breadcrumb_action %></span>
        </li>
      <% end %>

      <% if @child&.persisted? %>
        <li class="flex items-center">
          <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
          <% if current_page?(child_path(@child)) %>
            <span class="ml-2 text-gray-700 font-medium"><%= @child.first_name %></span>
          <% else %>
            <%= link_to @child.first_name, child_path(@child), class: "ml-2 text-gray-500 hover:text-gray-700" %>
          <% end %>
        </li>

        <% if content_for?(:breadcrumb_action) %>
          <li class="flex items-center">
            <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="ml-2 text-gray-700 font-medium"><%= yield :breadcrumb_action %></span>
          </li>
        <% end %>
      <% end %>
    </ol>
  </div>
</nav> 