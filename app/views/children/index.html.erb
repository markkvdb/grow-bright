<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Children</h1>
    <%= link_to "Add New Child", new_child_path, 
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @children.each do |child| %>
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-2">
          <%= link_to child.first_name, child_path(child), class: "text-blue-600 hover:text-blue-800" %>
        </h2>
        <div class="text-gray-600">
          <p>Age: <%= display_age(child) %></p>
          <p>Caregivers: <%= child.caregivers.count %></p>
          <p>Last feeding: <%= time_ago_in_words(child.feedings.last.start_time) if child.feedings.any? %></p>
        </div>
      </div>
    <% end %>
  </div>
</div> 