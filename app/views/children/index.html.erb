<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-blue-50">
  <div class="max-w-md w-full space-y-8 p-8 bg-white rounded-xl shadow-lg">
    <div class="text-center">
      <%= image_tag "logo.svg", class: "mx-auto h-20 w-20", alt: "GrowBright" %>
      <h2 class="mt-4 text-3xl font-extrabold text-gray-900">Select a Baby</h2>
      <p class="mt-2 text-sm text-gray-600">Choose which baby you want to track</p>
    </div>

    <div class="mt-8 space-y-4">
      <% @children.each do |child| %>
        <%= link_to child_path(child), class: "w-full flex items-center justify-between p-4 rounded-lg border border-gray-200 hover:border-green-500 hover:shadow-sm transition-all" do %>
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
              <span class="text-green-700 font-semibold text-lg"><%= child.first_name[0] %></span>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate">
                <%= child.first_name %>
              </p>
              <p class="text-sm text-gray-500 truncate">
                <%= "#{display_age(child)}" %>
              </p>
            </div>
          </div>
          <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
        <% end %>
      <% end %>

      <%= link_to new_child_path, class: "mt-6 w-full flex items-center justify-center p-4 rounded-lg border-2 border-dashed border-gray-300 hover:border-green-500 hover:bg-green-50 transition-all" do %>
        <div class="flex items-center space-x-2">
          <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium text-gray-600">Add New Baby</span>
        </div>
      <% end %>
    </div>
  </div>
</div> 