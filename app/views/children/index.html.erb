<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-blue-50">
  <div class="max-w-md w-full space-y-8 p-8 bg-white rounded-xl shadow-lg">
    <div class="text-center">
      <%= image_tag "logo.svg", class: "mx-auto h-20 w-20", alt: "GrowBright" %>
      <h2 class="mt-4 text-3xl font-extrabold text-gray-900">Select a Baby</h2>
      <p class="mt-2 text-sm text-gray-600">Choose which baby you want to track</p>
    </div>

    <div class="mt-8 space-y-4">
      <% @children.each do |child| %>
        <%= link_to child_path(child), class: "flex items-center p-4 border rounded-lg hover:border-green-500 transition-colors duration-150" do %>
          <div class="child-card">
            <%= render "shared/avatar", image: child.avatar, size: :medium %>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900"><%= child.first_name %></p>
            <p class="text-xs text-gray-500"><%= display_age(child) %></p>
          </div>
        <% end %>
      <% end %>

      <%= link_to new_child_path, class: "flex items-center justify-center p-4 border border-dashed rounded-lg hover:border-green-500 transition-colors duration-150" do %>
        <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        <span class="ml-2 text-sm font-medium text-gray-600">Add New Baby</span>
      <% end %>
    </div>
  </div>
</div> 