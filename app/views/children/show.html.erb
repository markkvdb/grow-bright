<%= render "shared/page_container" do %>
  <div class="bg-white rounded-xl shadow-lg p-8">
    <!-- Header section -->
    <div class="sm:flex sm:items-center sm:justify-between">
      <div class="flex items-center">
        <% if @child.avatar.attached? %>
          <%= image_tag @child.avatar.variant(:medium), 
              class: "h-24 w-24 rounded-full object-cover",
              alt: "#{@child.first_name}'s avatar" %>
        <% else %>
          <div class="h-24 w-24 rounded-full bg-gray-100 flex items-center justify-center">
            <svg class="h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
        <% end %>
        <div class="ml-4">
          <h1 class="text-2xl font-bold text-gray-900"><%= @child.first_name %>'s Dashboard</h1>
          <p class="mt-1 text-sm text-gray-700"><%= display_age(@child) %></p>
        </div>
      </div>
      <div class="mt-4 sm:mt-0">
        <%= render "shared/button", href: edit_child_path(@child), variant: :secondary do %>
          Edit Child
        <% end %>
      </div>
    </div>

    <!-- Recent activities grid -->
    <div class="mt-8 grid gap-6 grid-cols-1 lg:grid-cols-2">
      <!-- Feedings section -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900">Recent Feedings</h2>
          <%= render "shared/button", href: child_feedings_path(@child), variant: :secondary do %>
            View all
          <% end %>
        </div>
          <%= render partial: "feeding", collection: @recent_feedings, as: :feeding %>
      </div>

      <!-- Diapers section -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900">Recent Diaper Changes</h2>
          <%= render "shared/button", href: child_diaper_changes_path(@child), variant: :secondary do %>
            View all
          <% end %>
        </div>
        <%= render partial: "diaper_change", collection: @recent_diapers, as: :diaper_change %>
      </div>

      <!-- Activities section -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900">Recent Activities</h2>
          <%= render "shared/button", href: child_activities_path(@child), variant: :secondary do %>
            View all
          <% end %>
        </div>
        <%= render partial: "activity", collection: @recent_activities, as: :activity %>
      </div>

      <!-- Measurements section -->
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900">Recent Measurements</h2>
          <%= render "shared/button", href: child_measurements_path(@child), variant: :secondary do %>
            View all
          <% end %>
        </div>
        <%= render partial: "measurement", collection: @recent_measurements, as: :measurement %>
      </div>
    </div>
  </div>
<% end %> 