<% size_classes = case size
   when :small
     "w-8 h-8"
   when :medium
     "w-12 h-12"
   when :large
     "w-16 h-16"
   else
     "w-10 h-10"
   end
%>

<div class="<%= size_classes %> rounded-full bg-gray-100 flex items-center justify-center overflow-hidden">
  <% if image.present? %>
    <%= image_tag image, class: "w-full h-full object-cover" %>
  <% else %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-2/3 h-2/3 text-gray-400">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
    </svg>
  <% end %>
</div> 