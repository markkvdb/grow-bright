<% variant ||= :primary %>
<% tag = local_assigns.fetch(:href, nil) ? :a : :button %>

<%= content_tag tag, 
    class: class_names(
      "rounded-md px-3 py-2 text-center text-sm font-semibold shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2",
      "text-white bg-green-600 hover:bg-green-500 focus-visible:outline-green-600" => variant == :primary,
      "text-green-700 bg-green-50 hover:bg-green-100 focus-visible:outline-green-600" => variant == :secondary
    ),
    **local_assigns do %>
  <%= yield %>
<% end %> 