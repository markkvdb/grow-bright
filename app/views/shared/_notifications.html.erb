<div class="fixed bottom-4 right-4 z-50 flex flex-col gap-2">
  <% flash.each do |type, message| %>
    <% next if message.blank? %>
    <div data-controller="notification"
         data-notification-target="notification"
         class="relative flex items-center p-4 rounded-lg shadow-lg bg-white border-l-4 transition-opacity duration-300 overflow-hidden
                <%= type == 'notice' ? 'border-green-500' : 'border-red-500' %>">
      <div class="flex-1 mr-4">
        <p class="<%= type == 'notice' ? 'text-green-800' : 'text-red-800' %>">
          <%= message %>
        </p>
      </div>
      <button data-action="notification#close" class="text-gray-400 hover:text-gray-500">
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
      
      <!-- Progress bar -->
      <div data-notification-target="progress"
           class="absolute bottom-0 left-0 h-1 w-full transition-[width] duration-[5000ms] ease-linear
                  <%= type == 'notice' ? 'bg-green-500' : 'bg-red-500' %>"
           style="width: 100%">
      </div>
    </div>
  <% end %>
</div> 